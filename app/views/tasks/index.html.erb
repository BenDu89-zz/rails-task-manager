<h1>My Tasks</h1>

<ul>
  <% @Tasks.each do |task| %>
  <% if task.completed %>
    <li><i class="far fa-check-square"></i>
  <%else %>
    <li><i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %>
  </li>
  <%= link_to "delete", destroy_path(task.id), method: :delete %>
  <% end %>
</ul>

<%= link_to "Add a new task", new_path %>
